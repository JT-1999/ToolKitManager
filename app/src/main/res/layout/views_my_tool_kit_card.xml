<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_universe_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/viewsMyToolKitCardBackgroundCardView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:cardElevation="8dp"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintDimensionRatio="2:1"
        app:cardBackgroundColor="@color/color_my_tool_kit_card_background"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/viewsMyToolKitCardTitleTextView"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="@id/viewsMyToolKitCardBackgroundCardView"
        app:layout_constraintBottom_toTopOf="@id/viewsMyToolKitCardHorizontalView"
        app:layout_constraintLeft_toLeftOf="@id/viewsMyToolKitCardHorizontalView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/style_views_my_tk_card_title"
        tools:text="T1机械工具箱"/>

    <View
        android:id="@+id/viewsMyToolKitCardHorizontalView"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="@id/viewsMyToolKitCardBackgroundCardView"
        app:layout_constraintBottom_toBottomOf="@id/viewsMyToolKitCardBackgroundCardView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintWidth_percent="0.7"
        android:background="@color/color_my_tool_kit_card_divider"
        android:layout_width="0dp"
        android:layout_height="2dp"/>

    <View
        android:id="@+id/viewsMyToolKitCardVerticalView"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/viewsMyToolKitCardHorizontalView"
        app:layout_constraintBottom_toBottomOf="@id/viewsMyToolKitCardBackgroundCardView"
        app:layout_constraintLeft_toLeftOf="@id/viewsMyToolKitCardBackgroundCardView"
        app:layout_constraintRight_toRightOf="@id/viewsMyToolKitCardBackgroundCardView"
        android:layout_margin="10dp"
        android:background="@color/color_my_tool_kit_card_divider"
        android:layout_width="2dp"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/viewsMyToolKitCardSubtitleDeadlineTextView"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="@id/viewsMyToolKitCardVerticalView"
        app:layout_constraintBottom_toTopOf="@id/viewsMyToolKitCardDeadlineTextView"
        app:layout_constraintLeft_toLeftOf="@id/viewsMyToolKitCardHorizontalView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/style_views_my_tk_card_subtitle"
        android:text="@string/string_views_my_tool_kit_card_subtitle_deadline"
        tools:text="截止日期"/>

    <TextView
        android:id="@+id/viewsMyToolKitCardDeadlineTextView"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/viewsMyToolKitCardSubtitleDeadlineTextView"
        app:layout_constraintBottom_toBottomOf="@id/viewsMyToolKitCardVerticalView"
        app:layout_constraintLeft_toLeftOf="@id/viewsMyToolKitCardHorizontalView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/style_views_my_tk_card_subtitle"
        tools:text="2018/12/08"/>

    <TextView
        android:id="@+id/viewsMyToolKitCardSubtitlePositionTextView"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="@id/viewsMyToolKitCardSubtitleDeadlineTextView"
        app:layout_constraintBottom_toBottomOf="@id/viewsMyToolKitCardSubtitleDeadlineTextView"
        app:layout_constraintLeft_toLeftOf="@id/viewsMyToolKitCardVerticalView"
        app:layout_constraintRight_toLeftOf="@id/viewsMyToolKitCardPositionCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/style_views_my_tk_card_subtitle"
        android:text="@string/string_views_my_tool_kit_card_subtitle_position"
        tools:text="定位"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/viewsMyToolKitCardPositionCardView"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="@id/viewsMyToolKitCardSubtitleDeadlineTextView"
        app:layout_constraintBottom_toBottomOf="@id/viewsMyToolKitCardSubtitleDeadlineTextView"
        app:layout_constraintLeft_toRightOf="@id/viewsMyToolKitCardSubtitlePositionTextView"
        app:layout_constraintRight_toRightOf="@id/viewsMyToolKitCardHorizontalView"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="11dp"
        app:cardBackgroundColor="@color/color_my_tool_kit_card_warning"/>

    <TextView
        android:id="@+id/viewsMyToolKitCardSubtitleRiskTextView"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="@id/viewsMyToolKitCardDeadlineTextView"
        app:layout_constraintBottom_toBottomOf="@id/viewsMyToolKitCardDeadlineTextView"
        app:layout_constraintLeft_toLeftOf="@id/viewsMyToolKitCardSubtitlePositionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/style_views_my_tk_card_subtitle"
        android:text="@string/string_views_my_tool_kit_card_subtitle_risk"
        tools:text="风险"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/viewsMyToolKitCardRiskCardView"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="@id/viewsMyToolKitCardDeadlineTextView"
        app:layout_constraintBottom_toBottomOf="@id/viewsMyToolKitCardDeadlineTextView"
        app:layout_constraintLeft_toLeftOf="@id/viewsMyToolKitCardPositionCardView"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="11dp"
        app:cardBackgroundColor="@color/color_my_tool_kit_card_warning"/>

</androidx.constraintlayout.widget.ConstraintLayout>