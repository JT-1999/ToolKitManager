<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_universe_background">

        <ImageView
            android:id="@+id/fragmentLoginPhoneNumberImageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fragmentLoginPasswordImageView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/fragmentLoginPhoneNumberEditText"
            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintDimensionRatio="1:1"
            android:src="@drawable/icon_fragment_login_username"
            android:scaleType="centerCrop"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <EditText
            android:id="@+id/fragmentLoginPhoneNumberEditText"
            app:layout_constraintTop_toTopOf="@id/fragmentLoginPhoneNumberImageView"
            app:layout_constraintBottom_toBottomOf="@id/fragmentLoginPhoneNumberImageView"
            app:layout_constraintLeft_toRightOf="@id/fragmentLoginPhoneNumberImageView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/fragmentLoginPasswordImageView"
            app:layout_constraintTop_toBottomOf="@id/fragmentLoginPhoneNumberImageView"
            app:layout_constraintBottom_toTopOf="@id/fragmentLoginSubmitButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/fragmentLoginPasswordEditText"
            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintDimensionRatio="1:1"
            android:src="@drawable/icon_fragment_login_password"
            android:scaleType="centerCrop"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <EditText
            android:id="@+id/fragmentLoginPasswordEditText"
            app:layout_constraintTop_toTopOf="@id/fragmentLoginPasswordImageView"
            app:layout_constraintBottom_toBottomOf="@id/fragmentLoginPasswordImageView"
            app:layout_constraintLeft_toRightOf="@id/fragmentLoginPasswordImageView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/fragmentLoginSubmitButton"
            app:layout_constraintTop_toBottomOf="@id/fragmentLoginPasswordImageView"
            app:layout_constraintBottom_toTopOf="@id/fragmentLoginFindPasswordButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/fragmentLoginFindPasswordButton"
            app:layout_constraintTop_toBottomOf="@id/fragmentLoginPasswordImageView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>