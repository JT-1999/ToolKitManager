<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_universe_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/viewsMyOptionCardCardView"
        app:cardElevation="8dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.9"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <ImageView
        android:id="@+id/viewsMyOptionCardImageView"
        app:layout_constraintTop_toTopOf="@id/viewsMyOptionCardCardView"
        app:layout_constraintBottom_toTopOf="@id/viewsMyOptionCardTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintDimensionRatio="1:1"
        android:elevation="8dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/icon_universe_settings"/>

    <TextView
        android:id="@+id/viewsMyOptionCardTextView"
        app:layout_constraintTop_toBottomOf="@id/viewsMyOptionCardImageView"
        app:layout_constraintBottom_toBottomOf="@id/viewsMyOptionCardCardView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:elevation="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/style_views_my_option_card_title"
        tools:textSize="20sp"
        tools:text="皮皮虾"/>

</androidx.constraintlayout.widget.ConstraintLayout>