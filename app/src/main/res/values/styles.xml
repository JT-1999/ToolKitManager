<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- Comments of michaelHe:
             Cause of android system different versions,this one is actually
             nothing.People design it for convenience but now useless.-->
    </style>

    <!--universe styles-->
    <style name="style_universe_button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="style_universe_processing_dialog_text">
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!--styles for helper-->
    <style name="style_helper_toast" parent="android:Widget.Holo.Button.Borderless.Small">
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!--style for activity_main-->
    <style name="style_activity_main_bottom_bar_text">
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="style_activity_main_image_button">
        <item name="android:padding">0dp</item>
    </style>

    <!--style for fragment_settings-->
    <style name="style_fragment_settings_options_title">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--style for XML fragment_selector_date_picker-->
    <style name="style_fragment_selector_date_picker_button">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/color_universe_app_theme_color</item>
    </style>

    <!--style for views_MyTopBar-->
    <style name="style_views_my_top_bar_title">
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_universe_text_title</item>
    </style>

    <!--style for views_MyOptionCard-->
    <style name="style_views_my_option_card_title">
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_universe_foreground</item>
    </style>

    <!--style for views_MyToolKitCard-->
    <style name="style_views_my_tk_card_title">
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_universe_text_title</item>
    </style>

    <style name="style_views_my_tk_card_subtitle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_universe_text_title</item>
    </style>

    <!--style for views_MyMessageBar-->
    <style name="style_views_my_message_bar_title">
        <item name="android:gravity">center</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--style for views_MyMenuBar-->
    <style name="style_views_my_menu_bar_title">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--style for views_MyFormBar-->
    <style name="style_views_my_form_title">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_universe_text_title</item>
    </style>

    <style name="style_views_my_form_input">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/color_universe_text</item>
        <item name="android:textColorHint">@color/color_universe_text_hint</item>
        <item name="android:background">#00000000</item>
    </style>

</resources>
